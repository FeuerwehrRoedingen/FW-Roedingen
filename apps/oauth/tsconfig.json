{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "inlineSourceMap": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "dom",
      "ESNext"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [ 
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
