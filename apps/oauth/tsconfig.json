{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "incremental": true,
    "inlineSourceMap": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "target": "es2015"
  },
  "include": [ 
    "src/**/*",
    "index.ts",
    "Logger.ts",
    "enviroment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
