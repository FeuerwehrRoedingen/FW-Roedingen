{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "env":          ["./env.mjs"],
      "components/*": ["./src/components/*"],
      "hooks/*":      ["./src/hooks/*"],
      "utils/*":      ["./src/utils/*"],
      "store":        ["./src/store/index.ts"],
      "store/*":      ["./src/store/*"],
      "types/*":      ["../../types/*"],
      "react":        ["./node_modules/@types/react"],
      "react/*":      ["./node_modules/@types/react/*"],
      "next":         ["./node_modules/next"],
      "next/*":       ["./node_modules/next/*"],
    },
    "types": [
      "react/experimental",
      "react-dom/experimental",
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "env.mjs"],
  "exclude": ["node_modules"]
}
