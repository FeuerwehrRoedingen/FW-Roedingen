{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM","DOM.Iterable","ES2022"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
    "sourceMap": true,
    "target": "ES2022"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "functions"
  ]
}