{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "declaration": true,
    "outDir": "dist",

    "useDefineForClassFields": true,
    "importsNotUsedAsValues": "preserve"
  },
  "include": [
    "src",
    "index.ts",
    "run.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}