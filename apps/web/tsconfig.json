{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022",
      "ESNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015",
    "paths": {
      "components/*": [ "./src/components/*" ],
      "textures":     [ "./src/textures/index.ts" ],
      "textures/*":   [ "./src/textures/*" ],
      "store":        [ "./src/store/index.ts" ],
      "store/*":      [ "./src/store/*" ],
      "src/*":        [ "./src/*" ],
      "hooks/*":      [ "./src/hooks/*" ],
      "utils/*":      [ "./src/utils/*" ],
      "react":        [ "./node_modules/@types/react" ],
      "react/*":      [ "./node_modules/@types/react/*" ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "src/components",
    "src/hooks",
    "src/store",
    "src/utils",
    "next-env.d.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".next",
    "next.config.mjs"
  ]
}
