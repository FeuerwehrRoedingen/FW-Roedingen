{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2015",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015",
    "paths": {
      "components/*": [ "./src/components/*" ],
      "textures":     [ "./src/textures/index.ts" ],
      "textures/*":   [ "./src/textures/*" ],
      "store":        [ "./src/store/index.ts" ],
      "store/*":      [ "./src/store/*" ],
      "hooks/*":      [ "./src/hooks/*" ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./node_modules/@types/*"
    ]
  },
  "include": [
    "app",
    "components",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "next.config.mjs"
  ]
}
