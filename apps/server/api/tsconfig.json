{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "declaration": true,
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowJs": false,

    "useDefineForClassFields": true,
    "importsNotUsedAsValues": "preserve",
  },
  "include": [
    "src",
    "run.ts", 
    "../pocketbase/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "src/components/*"
  ]
}
