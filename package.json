{
  "name": "fw-roedingen-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/api",
      "apps/firebase",
      "apps/internal",
      "apps/mail",
      "apps/mobile",
      "apps/oauth",
      "apps/web",
      "packages/*"
    ]
  },
  "scripts": {
    "build:all": "turbo run build",
    "build:api": "turbo run build --filter=fw-roedingen-backend",
    "build:internal": "turbo run build --filter=fw-roedingen-internal",
    "build:web": "turbo run build --filter=fw-roedingen-web",
    "dev": "turbo run dev --parallel",
    "deploy": "cd apps/firebase && firebase deploy",
    "lint": "turbo run lint",
    "postinstall": "cd apps/api && prisma db push && cd ../oauth && prisma db push"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "prettier": "latest",
    "turbo": "latest",
    "turbo-ignore": "^0.1.0"

  },
  "engines": {
    "node": ">=14.0.0"
  }
}
