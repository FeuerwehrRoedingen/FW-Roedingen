{
  "name": "fw-roedingen",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/api",
      "apps/api/functions",
      "apps/internal",
      "apps/web",
      "packages/*"
    ],
    "nohoist": [
      "apps/mobile"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "deploy": "firebase deploy",
    "dev": "turbo run dev --parallel",
    "dev:browser": "concurrently \"cd apps/api && npm run dev\" \"cd apps/web && npm run dev\"",
    "dev:mobile": "concurrently \"cd apps/api && npm run dev\" \"cd apps/mobile && npm run dev\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.11.0"
}
