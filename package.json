{
  "name": "fw-roedingen",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/api",
      "apps/api/functions",
      "apps/internal",
      "apps/mail",
      "apps/oauth",
      "apps/web",
      "packages/*"
    ],
    "nohoist": [
      "apps/mobile"
    ]
  },
  "scripts": {
    "build:all": "turbo run build",
    "build:api": "turbo run build --filter=fw-roedingen-backend",
    "build:internal": "turbo run build --filter=fw-roedingen-internal",
    "build:web": "turbo run build --filter=fw-roedingen-web",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "heroku-postbuild": "sh ./heroku.sh",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.11.0",
  "dependencies": {
    "turbo-ignore": "^0.1.0"
  }
}
